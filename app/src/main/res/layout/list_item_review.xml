<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_10"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_10">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_review"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_10"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_author_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:textColor="@color/colorAccent"
                android:textSize="?android:textAppearanceMedium"
                tools:text="Author Name" />


            <TextView
                android:id="@+id/content_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_author_review"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="?android:textAppearanceSmall"
                tools:text="This is the movie review" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>